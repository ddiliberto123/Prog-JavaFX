<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="borderPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="FXMLDocuments.MainScreenController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem fx:id="fileClose" mnemonicParsing="false" onAction="#closeApp" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem fx:id="editClear" mnemonicParsing="false" onAction="#deleteAllPresets" text="Clear All Presets" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <left>
      <VBox fx:id="controleBox" prefHeight="389.0" prefWidth="175.0" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Presets" />
            <ComboBox fx:id="presetBox" editable="true" onAction="#loadPreset" prefHeight="35.0" prefWidth="150.0" promptText="Insert Name" />
            <Label text="Mass (kg)" />
            <TextField fx:id="massText" prefHeight="25.0" prefWidth="150.0" />
            <Label text="Distance from the sun (m)" />
            <TextField fx:id="radiusText" prefHeight="25.0" prefWidth="160.0" />
            <Label text="Inital Velocity (m/s)" />
            <HBox alignment="TOP_CENTER" prefHeight="27.0" prefWidth="155.0" VBox.vgrow="NEVER">
               <children>
                  <TextField maxHeight="-Infinity" prefHeight="25.0" prefWidth="80.0" promptText="X velocity" fx:id="xVel" />
                  <TextField fx:id="yVel" maxWidth="-Infinity" prefHeight="25.0" prefWidth="80.0" promptText="Y velocity" />
               </children>
            </HBox>
            <Button fx:id="startButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="152.0" text="Start" />
            <Button fx:id="clearButton" mnemonicParsing="false" onAction="#clearAll" prefWidth="152.0" text="Clear" />
            <Button fx:id="saveButton" mnemonicParsing="false" onAction="#savePreset" prefHeight="25.0" prefWidth="152.0" text="Save Preset" />
            <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#deletePreset" prefHeight="25.0" prefWidth="152.0" text="Delete Preset" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </left>
</BorderPane>
